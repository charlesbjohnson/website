[data-page="Work"] h2 a,
[data-page="Work"] h3 a,
[data-page="Work"] h4 a,
[data-page="Work"] h5 a,
[data-page="Work"] h6 a {
  color: inherit;
  margin-right: 0.5rem;
  text-decoration: none;
}

[data-page="Work"] h2 a:hover,
[data-page="Work"] h3 a:hover,
[data-page="Work"] h4 a:hover,
[data-page="Work"] h5 a:hover,
[data-page="Work"] h6 a:hover,
[data-page="Work"] h2 a:focus,
[data-page="Work"] h3 a:focus,
[data-page="Work"] h4 a:focus,
[data-page="Work"] h5 a:focus,
[data-page="Work"] h6 a:focus {
  text-decoration: underline;
}

[data-page="Work"] h2 {
  font-style: italic;
  text-align: center;
  text-decoration: underline;
  margin: 1.5em 0;
}

[data-page="Work"] section > :last-child {
  margin-bottom: 0;
}

[data-page="Work"] article {
  margin-bottom: 2rem;
}

[data-page="Work"] article > * {
  margin-bottom: 1rem;
}

[data-page="Work"] article > header {
  display: grid;
  grid-template-columns: 2fr 1fr;
}

[data-page="Work"] article > header > * {
  display: inline-flex;
  font-size: 0.85em;
  font-weight: var(--f-w-bold);
}

[data-page="Work"] article > header > :nth-child(1) {
  grid-column: 1;
  grid-row: 1;
}

[data-page="Work"] article > header > time {
  grid-column: 2;
  grid-row: 1;
  justify-self: end;
}

[data-page="Work"] article > header > address {
  grid-column: 1;
  grid-row: 2;
}

@media screen and (max-width: 375px) {
  [data-page="Work"] article > header > :nth-child(n) {
    grid-column: 1 / -1;
  }

  [data-page="Work"] article > header > time {
    grid-row: 2;
    justify-self: unset;
  }

  [data-page="Work"] article > header > address {
    grid-row: 3;
  }
}

[data-page="Work"] article > header > [data-emoji]::before {
  content: attr(data-emoji);
  font-size: 0.85em;
  font-weight: normal;
  margin-right: 1ch;
}

[data-page="Work"]
  article
  > header
  > address
  > :first-child:not(:last-child)::after {
  content: ",";
  margin-right: 0.5ch;
}

[data-page="Work"] article details summary {
  font-weight: var(--f-w-bold);
}

[data-page="Work"] article dl > div {
  column-gap: 0.5ch;
  display: flex;
  flex-wrap: wrap;
  font-size: 0.85em;
  margin: 0 0 0.25rem;
}

[data-page="Work"] article dl dt,
[data-page="Work"] article dl dd {
  margin-left: 0;
}

[data-page="Work"] article dl dt {
  flex-grow: 1;
  font-style: normal;
  margin-top: 0;
}

[data-page="Work"] article dl dd {
  border: 0.0625rem solid var(--c-gray);
  padding: 0 0.5ch;
}

[data-page="Work"] article dl dd + dd {
  margin-top: 0;
}

@media screen and (max-width: 475px) {
  [data-page="Work"] article dl > div {
    gap: 0.5ch;
    margin-bottom: 0.5rem;
  }

  [data-page="Work"] article dl dt {
    flex-basis: 100%;
  }
}

@media screen {
  [hidden="print"] {
    display: block;
  }

  [hidden="screen"] {
    display: none;
  }
}

@media print {
  :root {
    --f-sz-base: 0.7;
  }

  [hidden="print"] {
    display: none;
  }

  [hidden="screen"] {
    display: block;
  }

  [data-page="Work"] {
    margin: 0;
    width: 100%;
  }

  [data-page="Work"] header {
    display: none;
  }

  [data-page="Work"] main > div + div > h1 {
    margin-bottom: 0.5rem;
  }

  [data-page="Work"] main > div + div > address {
    margin: 1rem 0;
  }
}
