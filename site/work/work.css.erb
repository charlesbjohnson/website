[data-page="Work"] :is(h2, h3, h4, h5, h6) a {
  color: inherit;
  text-decoration: none;
}

[data-page="Work"] :is(h2, h3, h4, h5, h6) a:is(:hover, :focus) {
  text-decoration: underline;
}

[data-page="Work"] h2 {
  font-style: italic;
  text-align: center;
  text-decoration: underline;
}

[data-page="Work"] section > :last-child {
  margin-bottom: 0;
}

[data-page="Work"] article {
  margin-bottom: 2rem;
}

[data-page="Work"] article > :not(article) {
  margin-bottom: 1rem;
}

[data-page="Work"] article > header {
  display: grid;
  grid-template-columns: 2fr 1fr;
}

[data-page="Work"] article > header > * {
  display: inline-flex;
  font-size: 0.85em;
  font-weight: var(--f-w-bold);
}

[data-page="Work"] article > header > :nth-child(1) {
  grid-column: 1;
  grid-row: 1;
}

[data-page="Work"] article > header > time {
  grid-column: 2;
  grid-row: 1;
  justify-self: end;
}

[data-page="Work"] article > header > address {
  grid-column: 1;
  grid-row: 2;
}

@media screen and (max-width: 375px) {
  [data-page="Work"] article > header > :nth-child(n) {
    grid-column: 1 / -1;
  }

  [data-page="Work"] article > header > time {
    grid-row: 2;
    justify-self: unset;
  }

  [data-page="Work"] article > header > address {
    grid-row: 3;
  }
}

[data-page="Work"] article > header > [data-emoji]::before {
  content: attr(data-emoji);
  font-size: 0.85em;
  font-weight: normal;
  margin-right: 1ch;
}

[data-page="Work"]
  article
  > header
  > address
  > :first-child:not(:last-child)::after {
  content: ",";
  margin-right: 0.5ch;
}

[data-page="Work"] article details summary {
  font-weight: var(--f-w-bold);
}

[data-page="Work"] article details:nth-last-child(2) summary + p a {
  display: block;
}

[data-page="Work"] article dl {
  display: flex;
  flex-direction: column;
  font-size: 0.85em;
  row-gap: 0.25rem;
}

[data-page="Work"] article dl > div {
  display: flex;
  flex-wrap: wrap;
  gap: 0.25rem 0.5ch;
}

[data-page="Work"] article dl :is(dt, dd) {
  margin-left: 0;
}

[data-page="Work"] article dl dt {
  flex-grow: 1;
  font-style: normal;
  margin-top: 0;
}

[data-page="Work"] article dl dd {
  border: 0.0625rem solid var(--c-gray);
  padding: 0 0.5ch;
}

[data-page="Work"] article dl dd + dd {
  margin-top: 0;
}

@media screen and (max-width: 475px) {
  [data-page="Work"] article dl {
    row-gap: 0.5rem;
  }

  [data-page="Work"] article dl dt {
    flex-basis: 100%;
  }
}

@media screen {
  [data-hidden-for="screen"] {
    display: none !important;
  }
}

@media print {
  :root {
    --f-sz-base: 0.8;
  }

  [data-hidden-for="print"] {
    display: none !important;
  }

  [data-page-break] {
    page-break-after: always;
  }

  [data-page="Work"] {
    margin: 0;
    padding: 0;
    width: 100%;
  }

  [data-page="Work"] header {
    display: none;
  }

  [data-page="Work"] :is(h1, p) {
    margin-bottom: 0.5em;
  }

  [data-page="Work"] h1 ~ address {
    margin: 0.5rem 0;
  }

  [data-page="Work"] h2 {
    margin: 0.75em 0;
  }

  [data-page="Work"] article {
    margin-bottom: 1rem;
  }

  [data-page="Work"] article > :not(article) {
    margin-bottom: 0.5rem;
  }
}
