[data-page="Work"] :is(h2, h3, h4, h5, h6) a {
  color: inherit;
  text-decoration: none;
}

[data-page="Work"] :is(h2, h3, h4, h5, h6) a:is(:hover, :focus) {
  text-decoration: underline;
}

[data-page="Work"] h2 {
  font-style: italic;
  text-align: center;
  text-decoration: underline;
}

[data-page="Work"] [data-emoji]::before {
  content: attr(data-emoji);
  display: inline-block;
  font-weight: normal;
  margin-right: 1ch;
}

[data-page="Work"] section:nth-of-type(2) address {
  display: flex;
  flex-direction: column;
}

[data-page="Work"] article {
  margin-bottom: 2rem;
}

[data-page="Work"] article > :not(article) {
  margin-bottom: 1rem;
}

[data-page="Work"] article header {
  display: grid;
  grid-template-columns: 1fr minmax(11ch, auto);
}

[data-page="Work"] article header > * {
  display: inline-flex;
  font-size: 0.85em;
  font-weight: var(--f-w-bold);
}

[data-page="Work"] article header > :nth-child(1) {
  grid-column: 1;
  grid-row: 1;
}

[data-page="Work"] article header > :nth-child(2) {
  gap: 0.5ch;
  grid-column: 2;
  grid-row: 1;
  justify-self: end;
}

[data-page="Work"] article header address {
  grid-column: 1;
  grid-row: 2;
}

@media screen and (max-width: 375px) {
  [data-page="Work"] article header > :nth-child(n) {
    grid-column: 1 / -1;
  }

  [data-page="Work"] article header > :nth-child(2) {
    grid-row: 2;
    justify-self: revert;
  }

  [data-page="Work"] article header address {
    grid-row: 3;
  }
}

[data-page="Work"]
  article
  header
  address
  > :first-child:not(:last-child)::after {
  content: ",";
  margin-right: 0.5ch;
}

[data-page="Work"] article details summary {
  font-weight: var(--f-w-bold);
}

[data-page="Work"] article details:first-of-type a {
  display: block;
}

[data-page="Work"] article details:last-of-type dl {
  display: flex;
  flex-direction: column;
  font-size: 0.85em;
  row-gap: 0.25rem;
}

[data-page="Work"] article details:last-of-type dl div {
  display: flex;
  flex-wrap: wrap;
  gap: 0.25rem 0.5ch;
}

[data-page="Work"] article details:last-of-type dl :is(dt, dd) {
  margin-left: 0;
}

[data-page="Work"] article details:last-of-type dl dt {
  flex-grow: 1;
}

[data-page="Work"] article details:last-of-type dl dd {
  border: 0.0625rem solid var(--c-gray);
  padding: 0 0.5ch;
}

@media screen and (max-width: 475px) {
  [data-page="Work"] article details:last-of-type dl {
    row-gap: 0.5rem;
  }

  [data-page="Work"] article details:last-of-type dl dt {
    flex-basis: 100%;
  }
}

@media screen {
  [data-hidden-for="screen"] {
    display: none !important;
  }
}

@media print {
  :root {
    --f-sz-base: 0.585;
  }

  [data-hidden-for="print"] {
    display: none !important;
  }

  [data-page="Work"] {
    padding: 0;
    width: 100%;
  }

  [data-page="Work"] header {
    display: none;
  }

  [data-page="Work"] :is(h1, h2) {
    color: var(--c-blue);
  }

  [data-page="Work"] :is(h1, p, article) {
    margin-bottom: 0;
  }

  [data-page="Work"] section:nth-of-type(2) address {
    margin: 0.5rem 0;
  }

  [data-page="Work"] h2 {
    border-bottom: 0.125em solid var(--c-blue);
    margin: 0.5em 0;
    text-align: left;
    text-decoration: revert;
  }

  [data-page="Work"] article > :not(article) {
    margin-bottom: 0.35rem;
  }

  [data-page="Work"] article header > :nth-child(2) {
    justify-self: revert;
    min-width: 14ch;
  }

  [data-page="Work"] article :last-child ul {
    list-style-position: inside;
    margin: 0;
    padding-left: 0.75ex;
  }

  [data-page="Work"] section:nth-of-type(4) > div {
    display: flex;
    justify-content: space-between;
  }

  [data-page="Work"] section:nth-of-type(4) > div dl {
    display: flex;
    flex-direction: column;
    margin: 0;
  }

  [data-page="Work"] section:nth-of-type(4) > div dl dt {
    font-weight: var(--f-w-bolder);
  }

  [data-page="Work"] section:nth-of-type(4) > div dl dd {
    margin-left: 0;
  }
}
