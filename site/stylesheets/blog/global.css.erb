/* Blog::Global */
[data-page^="Blog::"] main time {
  font-size: 0.9em;
}

[data-page^="Blog::"] h2 a,
[data-page^="Blog::"] h3 a,
[data-page^="Blog::"] h4 a,
[data-page^="Blog::"] h5 a,
[data-page^="Blog::"] h6 a {
  color: inherit;
  text-decoration: none;
  margin-right: 0.5ch;
}

[data-page^="Blog::"] h2 a:hover,
[data-page^="Blog::"] h3 a:hover,
[data-page^="Blog::"] h4 a:hover,
[data-page^="Blog::"] h5 a:hover,
[data-page^="Blog::"] h6 a:hover,
[data-page^="Blog::"] h2 a:focus,
[data-page^="Blog::"] h3 a:focus,
[data-page^="Blog::"] h4 a:focus,
[data-page^="Blog::"] h5 a:focus,
[data-page^="Blog::"] h6 a:focus {
  text-decoration: underline;
}

[data-page^="Blog::"] h2 span,
[data-page^="Blog::"] h3 span,
[data-page^="Blog::"] h4 span,
[data-page^="Blog::"] h5 span,
[data-page^="Blog::"] h6 span {
  font-size: 0.8em;
  font-weight: normal;
}
