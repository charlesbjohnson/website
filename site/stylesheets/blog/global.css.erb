/* Blog::Global */
[data-page^="Blog::"] main time {
  font-size: 0.9em;
}

[data-page^="Blog::"] :is(h2, h3, h4, h5, h6) {
  display: inline-flex;
  gap: 0.5ch;
  margin: 0.65em 0 0.35em;
}

[data-page^="Blog::"] :is(h2, h3, h4, h5, h6) a {
  color: inherit;
  text-decoration: none;
}

[data-page^="Blog::"] :is(h2, h3, h4, h5, h6) a:is(:hover, :focus) {
  text-decoration: underline;
}

[data-page^="Blog::"] :is(h2, h3, h4, h5, h6) span {
  font-size: 0.8em;
  font-weight: normal;
}
