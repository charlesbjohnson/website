/* Components::DefinitionList */
dl dt {
  font-style: italic;
  font-weight: var(--f-w-bold);
  margin-top: 1rem;
}

dl dt + dt {
  margin-top: 0;
}

dl :is(dt, dd) + dd {
  margin-top: 0.5rem;
}

/* Components::Code, Components::Image, Components::Quote */
figure {
  margin: 0 0 1rem;
}

