<%= Layouts::Default.new(page: page, description: opts.fetch(:description, page.preview), **opts) do |c| %>
  <%= c.styles do %>
    <link rel="stylesheet" href="<%= Stylesheets::Blog.uri %>" />
  <% end %>

  <%= c.main do %>
    <time datetime="<%= page.date %>"><%= page.date.strftime("%B %-d, %Y") %></time>
    <h1><%= page.title %></h1>

    <article>
      <%= yield %>
    </article>
  <% end %>

  <%= c.scripts do %>
    <script type="module"><%= templates["blog_post.js.erb"].render(self) %></script>
  <% end %>
<% end.render %>
