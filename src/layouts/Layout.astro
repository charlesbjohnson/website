---
import {compact} from "../util.js"

const {favicon, logo = true, page} = Astro.props;
const title = compact([page, "Charles B Johnson"]).join(" | ")
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<title>{title}</title>
		<link rel="stylesheet" href="/stylesheets/style.css" />

		<meta name="description" content="Charles B Johnson's internet presence" />
		<link rel="canonical" href="https://cbjohnson.info" />

		<link rel="icon" href={`data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>${favicon}</text></svg>`} />
	</head>

	<body>
		<div class="container mx-auto">
			<header class="flex justify-end">
				{logo && (<div><a href="/">CBJohnson</a></div>)}

				<!-- nav>
					<ul class="flex gap-x-10">
						<li><a href="/about">About</a></li>
						<li><a href="/cv">CV</a></li>
						<li><a href="mailto:mail@cbjohnson.info">Contact</a></li>
					</ul>
				</nav -->
			</header>

			<main>
				<slot />
			</main>
		</div>
	</body>
</html>
